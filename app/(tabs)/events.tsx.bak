import React, { useEffect, useState, useMemo, useCallback } from 'react';
import {
  View,
  Text,
  FlatList,
  Pressable,
  ActivityIndicator,
  RefreshControl,
  TextInput,
  Modal,
  ListRenderItem,
  LayoutChangeEvent,
} from 'react-native';
import { SafeAreaView, useSafeAreaInsets } from 'react-native-safe-area-context';
import { Ionicons } from '@expo/vector-icons';
import { LinearGradient } from 'expo-linear-gradient';
import { useRouter } from 'expo-router';
import { useNavigation } from '@react-navigation/native';
import Animated, {
  FadeInDown,
  FadeInUp,
  Easing,
  interpolate,
  useAnimatedStyle,
  useSharedValue,
  withTiming,
} from 'react-native-reanimated';
import { useSavedStore } from '../../src/store/useSavedStore';
import CountdownTimer from '../../src/components/CountdownTimer';
import PixelTapOverlay from '../../src/components/PixelTapOverlay';

const SERVER_URL = process.env.EXPO_PUBLIC_API_URL;
const CATEGORIES = ['all', 'tech', 'non-tech', 'workshop', 'other'];

interface Event {
  _id: string;
  title: string;
  description?: string;
  category: 'tech' | 'non-tech' | 'workshop' | 'other';
  venue: string;
  date: string;
  time: string;
  maxParticipants: number;
  registrationFee: number;
  requiresTeam: boolean;
  status: 'active' | 'inactive';
}

const THEME = {
  bg: '#000000',
  card: '#0B0B0B',
  border: 'rgba(255, 255, 255, 0.14)',
  text: '#FFFFFF',
  dim: 'rgba(255, 255, 255, 0.6)',
  accent: '#FFFFFF',
  primary: '#FFFFFF',
  deep: '#000000',
  gradientStart: '#FFFFFF',
  gradientEnd: '#000000',
};

const PIXEL_COLORS = '#FFFFFF,#E5E5E5,#BFBFBF';

type EventCardProps = {
  item: Event;
  saved: boolean;
  onPress: () => void;
  onToggleSave: () => void;
};

const AnimatedBackButton = ({ onPress }: { onPress: () => void }) => {
  const progress = useSharedValue(0);

  useEffect(() => {
    progress.value = withTiming(1, {
      duration: 260,
      easing: Easing.out(Easing.cubic),
    });
  }, [progress]);

  const topLineStyle = useAnimatedStyle(() => {
    const rotate = interpolate(progress.value, [0, 1], [0, -45]);
    return {
      transform: [
        { translateY: interpolate(progress.value, [0, 1], [-6, 0]) },
        { translateX: interpolate(progress.value, [0, 1], [0, -4]) },
        { rotate: `${rotate}deg` },
        { scaleX: interpolate(progress.value, [0, 1], [1, 0.75]) },
      ],
    };
  });

  const bottomLineStyle = useAnimatedStyle(() => {
    const rotate = interpolate(progress.value, [0, 1], [0, 45]);
    return {
      transform: [
        { translateY: interpolate(progress.value, [0, 1], [6, 0]) },
        { translateX: interpolate(progress.value, [0, 1], [0, -4]) },
        { rotate: `${rotate}deg` },
        { scaleX: interpolate(progress.value, [0, 1], [1, 0.75]) },
      ],
    };
  });

  return (
    <Pressable
      onPress={onPress}
      accessibilityRole="button"
      accessibilityLabel="Go back"
      style={{
        width: 44,
        height: 44,
        borderRadius: 14,
        borderWidth: 1,
        borderColor: 'rgba(255, 255, 255, 0.25)',
        backgroundColor: 'rgba(255, 255, 255, 0.08)',
        alignItems: 'center',
        justifyContent: 'center',
      }}
    >
      <Animated.View
        style={[
          {
            position: 'absolute',
            width: 24,
            height: 2,
            borderRadius: 2,
            backgroundColor: '#FFFFFF',
          },
          topLineStyle,
        ]}
      />
      <Animated.View
        style={[
          {
            position: 'absolute',
            width: 24,
            height: 2,
            borderRadius: 2,
            backgroundColor: '#FFFFFF',
          },
          bottomLineStyle,
        ]}
      />
    </Pressable>
  );
};

const EventCard = React.memo(({ item, saved, onPress, onToggleSave }: EventCardProps) => {
  const [cardSize, setCardSize] = useState<{ width: number; height: number } | null>(null);
  const [tapSeed, setTapSeed] = useState(0);

  const eventDate = useMemo(
    () =>
      new Date(item.date).toLocaleDateString('en-GB', {
        day: 'numeric',
        month: 'short',
      }),
    [item.date]
  );

  const onLayout = useCallback((event: LayoutChangeEvent) => {
    const { width, height } = event.nativeEvent.layout;
    setCardSize((prev) => {
      if (prev && prev.width === width && prev.height === height) {
        return prev;
      }
      return { width, height };
    });
  }, []);

  const onPressIn = useCallback(() => {
    setTapSeed((value) => value + 1);
  }, []);

  return (
    <View style={{ marginBottom: 20 }}>
      <View
        onLayout={onLayout}
        style={{
          backgroundColor: 'rgba(0, 0, 0, 0.35)',
          borderRadius: 18,
          borderWidth: 1,
          borderColor: 'rgba(255, 255, 255, 0.16)',
          overflow: 'hidden',
          shadowColor: '#FFFFFF',
          shadowOpacity: 0.08,
          shadowRadius: 14,
          shadowOffset: { width: 0, height: 6 },
        }}
      >
        {cardSize ? (
          <PixelTapOverlay
            width={cardSize.width}
            height={cardSize.height}
            trigger={tapSeed}
            gap={6}
            speed={40}
            colors={PIXEL_COLORS}
          />
        ) : null}
        <Pressable
          onPress={onPress}
          onPressIn={onPressIn}
          style={({ pressed }) => ({
            opacity: pressed ? 0.78 : 1,
          })}
        >
          <View className="p-5">
            <View className="flex-row justify-between items-start mb-3">
              <View
                style={{
                  backgroundColor: 'rgba(255, 255, 255, 0.06)',
                  borderColor: 'rgba(255, 255, 255, 0.3)',
                  borderWidth: 1,
                }}
                className="px-3 py-1 rounded-md"
              >
                <Text
                  style={{ color: THEME.text, fontFamily: 'Orbitron_400Regular' }}
                  className="text-[10px] uppercase tracking-widest"
                >
                  {item.category}
                </Text>
              </View>
              <Pressable onPress={onToggleSave} className="p-1">
                <Ionicons
                  name={saved ? 'bookmark' : 'bookmark-outline'}
                  size={22}
                  color={saved ? THEME.text : THEME.dim}
                />
              </Pressable>
            </View>

            <Text
              style={{ fontFamily: 'Orbitron_700Bold', color: THEME.text }}
              className="text-xl uppercase tracking-wider mb-2"
            >
              {item.title}
            </Text>

            <View className="flex-row items-center gap-x-4 mb-4">
              <View className="flex-row items-center">
                <Ionicons name="location-sharp" size={14} color={THEME.text} />
                <Text style={{ color: THEME.dim }} className="text-xs ml-1 font-bold">
                  {item.venue}
                </Text>
              </View>
              <View className="flex-row items-center">
                <Ionicons name="time" size={14} color={THEME.text} />
                <Text style={{ color: THEME.dim }} className="text-xs ml-1 font-bold">
                  {eventDate} • {item.time}
                </Text>
              </View>
            </View>

            <View
              style={{ borderTopColor: THEME.border }}
              className="flex-row justify-between items-center border-t pt-4"
            >
              <View>
                <Text
                  style={{ color: THEME.dim }}
                  className="text-[8px] font-bold uppercase tracking-widest"
                >
                  Fee
                </Text>
                <Text
                  style={{ color: THEME.text, fontFamily: 'Orbitron_400Regular' }}
                  className="text-lg"
                >
                  {item.registrationFee > 0 ? `₹${item.registrationFee}` : 'FREE'}
                </Text>
              </View>
              <View className="items-end">
                <Text
                  style={{ color: THEME.dim }}
                  className="text-[8px] font-bold uppercase tracking-widest"
                >
                  Type
                </Text>
                <View className="flex-row items-center">
                  <Ionicons
                    name={item.requiresTeam ? 'people' : 'person'}
                    size={12}
                    color={THEME.dim}
                  />
                  <Text style={{ color: THEME.text }} className="font-bold text-xs uppercase ml-1">
                    {item.requiresTeam ? 'Team' : 'Solo'}
                  </Text>
                </View>
              </View>
            </View>
          </View>
        </Pressable>
        {/* Saved indicator line at bottom */}
        {saved && (
          <View style={{ paddingHorizontal: 16, paddingBottom: 8 }}>
            <View
              style={{
                height: 2,
                width: '100%',
                borderRadius: 1,
                backgroundColor: '#FFFFFF',
                opacity: 0.7,
              }}
            />
          </View>
        )}
      </View>
    </View>
  );
});

export default function Events() {
  const router = useRouter();
  const navigation = useNavigation();
  const insets = useSafeAreaInsets();
  const { toggleSave, isSaved, savedIds } = useSavedStore();
  const handleBack = useCallback(() => {
    if (navigation.canGoBack()) {
      navigation.goBack();
    } else {
      router.replace('/dashboard');
    }
  }, [navigation, router]);

  const [events, setEvents] = useState<Event[]>([]);
  const [loading, setLoading] = useState(true);
  const [refreshing, setRefreshing] = useState(false);
  const [searchQuery, setSearchQuery] = useState('');
  const [selectedCategory, setSelectedCategory] = useState('all');
  const [isSavedModalVisible, setIsSavedModalVisible] = useState(false);

  const [searchVisible, setSearchVisible] = useState(false);
  const [categoryMeta, setCategoryMeta] = useState({
    canScrollLeft: false,
    canScrollRight: false,
    layoutWidth: 0,
    contentWidth: 0,
  });

  useEffect(() => {
    fetchEvents();
  }, []);

  const fetchEvents = async () => {
    try {
      const response = await fetch(`${SERVER_URL}/api/events`);
      const result = await response.json();
      if (response.ok) {
        setEvents(result.data || []);
      }
    } catch (err) {
      if (__DEV__) console.error("Fetch events error");
    } finally {
      setLoading(false);
      setRefreshing(false);
    }
  };

  const onRefresh = () => {
    setRefreshing(true);
    fetchEvents();
  };

  const filteredEvents = useMemo(() => {
    return events.filter((event) => {
      const matchesSearch =
        event.title.toLowerCase().includes(searchQuery.toLowerCase()) ||
        event.venue.toLowerCase().includes(searchQuery.toLowerCase());

      const matchesCategory =
        selectedCategory === 'all' || event.category === selectedCategory;

      return matchesSearch && matchesCategory && event.status === 'active';
    });
  }, [events, searchQuery, selectedCategory]);

  const savedEventsList = useMemo(() => {
    return events.filter((event) => savedIds.includes(event._id));
  }, [events, savedIds]);

  const renderEventItem: ListRenderItem<Event> = useCallback(
    ({ item, index }) => {
      const saved = isSaved(item._id);
      return (
        <Animated.View
          entering={
            index < 6
              ? FadeInUp.delay(60 + index * 45)
                .duration(420)
                .easing(Easing.out(Easing.cubic))
              : undefined
          }
        >
          <EventCard
            item={item}
            saved={saved}
            onPress={() =>
              router.push({ pathname: 'EventDetails/[id]', params: { id: item._id } })
            }
            onToggleSave={() => toggleSave(item._id)}
          />
        </Animated.View>
      );
    },
    [isSaved, router, toggleSave]
  );

  const ListHeader = useMemo(() => {
    return (
      <View>
        <CountdownTimer />

        <Animated.View
          entering={FadeInDown.duration(420).easing(Easing.out(Easing.cubic))}
          style={{ marginTop: 18, flexDirection: 'row', alignItems: 'center', gap: 12 }}
        >
          <Pressable
            onPress={() => setSearchVisible(!searchVisible)}
            className="w-10 h-10 rounded-full items-center justify-center"
            style={{
              backgroundColor: searchVisible ? 'rgba(255, 255, 255, 0.18)' : 'rgba(255, 255, 255, 0.06)',
              borderColor: 'rgba(255, 255, 255, 0.2)',
              borderWidth: 1,
            }}
          >
            <Ionicons name="search" size={20} color={THEME.text} />
          </Pressable>
          <Pressable
            onPress={() => setIsSavedModalVisible(true)}
            className="w-10 h-10 rounded-full items-center justify-center"
            style={{
              backgroundColor: savedEventsList.length > 0 ? 'rgba(255, 255, 255, 0.18)' : 'rgba(255, 255, 255, 0.06)',
              borderColor: 'rgba(255, 255, 255, 0.2)',
              borderWidth: 1,
            }}
          >
            <View>
              <Ionicons
                name={savedEventsList.length > 0 ? 'bookmark' : 'bookmark-outline'}
                size={20}
                color={THEME.text}
              />
              {savedEventsList.length > 0 && (
                <View className="absolute -top-1 -right-1 w-4 h-4 rounded-full bg-white items-center justify-center">
                  <Text className="text-[9px] font-bold text-black">{savedEventsList.length}</Text>
                </View>
              )}
            </View>
          </Pressable>
        </Animated.View>

        {searchVisible ? (
          <Animated.View
            entering={FadeInDown.delay(120).duration(360).easing(Easing.out(Easing.cubic))}
            className="pt-3"
          >
            <View
              style={{
                backgroundColor: 'rgba(255, 255, 255, 0.05)',
                borderColor: 'rgba(255, 255, 255, 0.18)',
              }}
              className="flex-row items-center border rounded-full px-4 py-2"
            >
              <Ionicons name="search" size={18} color={THEME.text} />
              <TextInput
                placeholder="Search events..."
                placeholderTextColor="rgba(255, 255, 255, 0.5)"
                className="flex-1 ml-3 text-white font-medium text-sm"
                style={{ paddingVertical: 4 }}
                value={searchQuery}
                onChangeText={setSearchQuery}
                autoFocus
              />
              <Pressable
                onPress={() => {
                  setSearchVisible(false);
                  setSearchQuery('');
                }}
                className="w-8 h-8 rounded-full items-center justify-center"
                style={{
                  backgroundColor: 'rgba(255, 255, 255, 0.08)',
                  borderColor: 'rgba(255, 255, 255, 0.2)',
                  borderWidth: 1,
                }}
              >
                <Ionicons name="close" size={16} color={THEME.text} />
              </Pressable>
            </View>
          </Animated.View>
        ) : null}

        <View className="py-3">
          <View style={{ position: 'relative' }}>
            <FlatList
            horizontal
            data={CATEGORIES}
            keyExtractor={(item) => item}
            showsHorizontalScrollIndicator={false}
            contentContainerStyle={{ paddingVertical: 2, paddingRight: 6 }}
            ItemSeparatorComponent={() => <View style={{ width: 12 }} />}
            onLayout={(event) => {
              const { width } = event.nativeEvent.layout;
              setCategoryMeta((prev) => {
                const canScrollRight = prev.contentWidth > width + 4;
                return {
                  ...prev,
                  layoutWidth: width,
                  canScrollRight,
                };
              });
            }}
            onContentSizeChange={(width) => {
              setCategoryMeta((prev) => {
                const canScrollRight = width > prev.layoutWidth + 4;
                return {
                  ...prev,
                  contentWidth: width,
                  canScrollRight,
                };
              });
            }}
            onScroll={(event) => {
              const x = event.nativeEvent.contentOffset.x;
              setCategoryMeta((prev) => {
                const canScrollLeft = x > 4;
                const canScrollRight = x + prev.layoutWidth < prev.contentWidth - 4;
                if (
                  canScrollLeft === prev.canScrollLeft &&
                  canScrollRight === prev.canScrollRight
                ) {
                  return prev;
                }
                return {
                  ...prev,
                  canScrollLeft,
                  canScrollRight,
                };
              });
            }}
            scrollEventThrottle={16}
            renderItem={({ item }) => {
              const active = selectedCategory === item;
              const label = item.replace('-', ' ');
              return (
                <Pressable
                  onPress={() => setSelectedCategory(item)}
                  style={({ pressed }) => ({
                    opacity: pressed ? 0.7 : 1,
                    paddingHorizontal: 14,
                    paddingVertical: 8,
                    borderRadius: 12,
                    borderWidth: 1,
                    borderColor: active ? '#FFFFFF' : 'rgba(255, 255, 255, 0.12)',
                    backgroundColor: active ? 'rgba(255, 255, 255, 0.08)' : 'transparent',
                  })}
                >
                  <Text
                    style={{
                      fontFamily: 'Orbitron_700Bold',
                      color: active ? '#FFFFFF' : 'rgba(255, 255, 255, 0.7)',
                    }}
                    className="uppercase text-[9.5px] tracking-[2.5px]"
                  >
                    {label}
                  </Text>
                  <View
                    style={{
                      marginTop: 6,
                      height: 2,
                      borderRadius: 2,
                      backgroundColor: active ? '#FFFFFF' : 'transparent',
                      opacity: active ? 0.9 : 0,
                    }}
                  />
                </Pressable>
              );
            }}
          />
            {categoryMeta.canScrollLeft ? (
              <LinearGradient
                pointerEvents="none"
                colors={['rgba(0,0,0,0.9)', 'rgba(0,0,0,0)']}
                start={{ x: 0, y: 0.5 }}
                end={{ x: 1, y: 0.5 }}
                style={{
                  position: 'absolute',
                  left: 0,
                  top: 2,
                  bottom: 2,
                  width: 34,
                }}
              />
            ) : null}
            {categoryMeta.canScrollRight ? (
              <LinearGradient
                pointerEvents="none"
                colors={['rgba(0,0,0,0)', 'rgba(0,0,0,0.9)']}
                start={{ x: 0, y: 0.5 }}
                end={{ x: 1, y: 0.5 }}
                style={{
                  position: 'absolute',
                  right: 0,
                  top: 2,
                  bottom: 2,
                  width: 34,
                }}
              />
            ) : null}
          </View>
        </View>
      </View>
    );
  }, [categoryMeta, searchQuery, selectedCategory, searchVisible, savedEventsList.length]);

  if (loading) {
    return (
      <SafeAreaView edges={['top']} style={{ flex: 1, backgroundColor: 'transparent', justifyContent: 'center', alignItems: 'center' }}>
        <View
          pointerEvents="none"
          style={{
            position: 'absolute',
            top: 0,
            right: 0,
            bottom: 0,
            left: 0,
            backgroundColor: 'rgba(0, 0, 0, 0.45)',
          }}
        />
        <ActivityIndicator size="large" color={THEME.text} />
      </SafeAreaView>
    );
  }

  return (
    <SafeAreaView edges={['top']} style={{ flex: 1, backgroundColor: 'transparent' }}>
      <View style={{ flex: 1 }}>
        <View
          pointerEvents="none"
          style={{
            position: 'absolute',
            top: 0,
            right: 0,
            bottom: 0,
            left: 0,
            backgroundColor: 'rgba(0, 0, 0, 0.45)',
          }}
        />

        <View style={{ paddingTop: Math.max(0, insets.top - 20), paddingHorizontal: 20, paddingBottom: 4 }}>
          <View style={{ flexDirection: 'row', alignItems: 'center' }}>
            <AnimatedBackButton onPress={handleBack} />
            <View style={{ marginLeft: 14 }}>
              <Text
                style={{ fontFamily: 'Orbitron_900Black', color: THEME.text }}
                className="text-2xl uppercase tracking-tighter"
              >
                Events
              </Text>
              <Text style={{ color: THEME.dim, letterSpacing: 2 }} className="text-[9px] font-bold uppercase">
                Mission Objectives
              </Text>
            </View>
          </View>
          <View style={{ height: 1, backgroundColor: THEME.border, marginTop: 12 }} />
        </View>

        <FlatList
          data={filteredEvents}
          keyExtractor={(item) => item._id}
          renderItem={renderEventItem}
          contentContainerStyle={{ paddingHorizontal: 20, paddingBottom: 120, paddingTop: 8 }}
          refreshControl={
            <RefreshControl
              refreshing={refreshing}
              onRefresh={onRefresh}
              tintColor={THEME.text}
            />
          }
          ListHeaderComponent={ListHeader}
          ListEmptyComponent={
            <View className="items-center mt-20">
              <Ionicons name="planet-outline" size={60} color={THEME.dim} />
              <Text style={{ color: THEME.dim }} className="font-bold uppercase italic mt-4">
                No active signals
              </Text>
            </View>
          }
        />

        <Modal
          visible={isSavedModalVisible}
          animationType="slide"
          presentationStyle="pageSheet"
          onRequestClose={() => setIsSavedModalVisible(false)}
        >
          <View style={{ flex: 1, backgroundColor: THEME.bg }}>
            <View style={{ borderBottomColor: THEME.border }} className="flex-row justify-between items-center p-6 border-b">
              <Text style={{ fontFamily: 'Orbitron_700Bold', color: THEME.text }} className="text-2xl uppercase tracking-tighter">
                Saved Logs
              </Text>
              <Pressable onPress={() => setIsSavedModalVisible(false)}>
                <Ionicons name="close-circle" size={32} color={THEME.dim} />
              </Pressable>
            </View>
            <FlatList
              data={savedEventsList}
              keyExtractor={(item) => `saved-${item._id}`}
              renderItem={renderEventItem}
              contentContainerStyle={{ padding: 20 }}
              ListEmptyComponent={
                <Text style={{ color: THEME.dim }} className="text-center mt-20 uppercase font-bold">
                  No saved logs
                </Text>
              }
            />
          </View>
        </Modal>
      </View>
    </SafeAreaView>
  );
}
